<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@color/screen_background"

    tools:context=".Ulocation_preferenceActivity">



    <LinearLayout

        android:id="@+id/topBar"

        android:layout_width="0dp"

        android:layout_height="?attr/actionBarSize"

        android:background="@color/card_background"

        android:gravity="center_vertical"

        android:orientation="horizontal"

        android:paddingStart="16dp"

        android:paddingEnd="16dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent">



        <ImageView

            android:id="@+id/backButton"

            android:layout_width="24dp"

            android:layout_height="24dp"

            android:src="@drawable/ic_back_arrow"

            app:tint="@color/text_primary"/>



        <TextView

            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:text="Choose Your Location"

            android:textAlignment="center"

            android:textColor="@color/text_primary"

            android:textSize="20sp"

            android:textStyle="bold" />

    </LinearLayout>



    <ScrollView

        android:layout_width="0dp"

        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/topBar">



        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:padding="16dp">



            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_marginStart="8dp"

                android:layout_marginBottom="16dp"

                android:text="To show nearby food stalls, we need your\nlocation preferences."

                android:textColor="@color/text_secondary"

                android:textSize="16sp" />



            <RadioGroup

                android:id="@+id/locationRadioGroup"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="vertical">



                <androidx.cardview.widget.CardView

                    android:id="@+id/autoDetectCard"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    app:cardBackgroundColor="@color/card_background"

                    android:layout_marginBottom="12dp"

                    app:cardCornerRadius="8dp">



                    <LinearLayout

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"

                        android:padding="16dp"

                        android:orientation="horizontal">



                        <ImageView

                            android:layout_width="24dp"

                            android:layout_height="24dp"

                            android:layout_marginEnd="16dp"

                            android:src="@drawable/ic_location_pin"

                            app:tint="@color/brand_pink" />



                        <LinearLayout

                            android:layout_width="0dp"

                            android:layout_height="wrap_content"

                            android:layout_weight="1"

                            android:orientation="vertical">



                            <TextView

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:text="Auto Detect Location"

                                android:textColor="@color/text_primary"

                                android:textStyle="bold"/>



                            <TextView

                                android:id="@+id/autoDetectLocationResultTextView"

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:text="Use device GPS for current location"

                                android:textColor="@color/text_secondary"

                                android:textSize="12sp"/>

                        </LinearLayout>



                        <RadioButton

                            android:id="@+id/autoDetectRadioButton"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:clickable="false" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView

                    android:id="@+id/enterManuallyCard"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    app:cardBackgroundColor="@color/card_background"

                    android:layout_marginBottom="12dp"

                    app:cardCornerRadius="8dp">



                    <LinearLayout

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"

                        android:padding="16dp"

                        android:orientation="horizontal">



                        <ImageView

                            android:layout_width="24dp"

                            android:layout_height="24dp"

                            android:layout_marginEnd="16dp"

                            android:src="@drawable/ic_grid"

                            app:tint="@color/brand_pink" />



                        <LinearLayout

                            android:layout_width="0dp"

                            android:layout_height="wrap_content"

                            android:layout_weight="1"

                            android:orientation="vertical">



                            <TextView

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:text="Enter Manually"

                                android:textColor="@color/text_primary"

                                android:textStyle="bold"/>



                            <EditText

                                android:id="@+id/manualLocationEditText"

                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"

                                android:layout_marginTop="4dp"

                                android:background="@android:color/transparent"

                                android:hint="Enter your area, street..."

                                android:textColorHint="@color/text_secondary"

                                android:textColor="@color/text_primary"

                                android:textSize="14sp" />

                        </LinearLayout>



                        <RadioButton

                            android:id="@+id/manualRadioButton"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:clickable="false" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView

                    android:id="@+id/mapPickerCard"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    app:cardBackgroundColor="@color/card_background"

                    android:layout_marginBottom="12dp"

                    app:cardCornerRadius="8dp">



                    <LinearLayout

                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"

                        android:padding="16dp"

                        android:orientation="horizontal">



                        <ImageView

                            android:layout_width="24dp"

                            android:layout_height="24dp"

                            android:layout_marginEnd="16dp"

                            android:src="@drawable/ic_map"

                            app:tint="@color/brand_pink" />



                        <LinearLayout

                            android:layout_width="0dp"

                            android:layout_height="wrap_content"

                            android:layout_weight="1"

                            android:orientation="vertical">



                            <TextView

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:text="Use Map Picker"

                                android:textColor="@color/text_primary"

                                android:textStyle="bold"/>



                            <Button

                                android:id="@+id/selectOnMapButton"

                                style="@style/Widget.Material3.Button.OutlinedButton"

                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"

                                android:layout_marginTop="4dp"

                                android:text="Select on Map"

                                android:textAllCaps="false"

                                android:textColor="@color/brand_pink"

                                app:strokeColor="@color/brand_pink"/>

                        </LinearLayout>



                        <RadioButton

                            android:id="@+id/mapRadioButton"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:clickable="false" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RadioGroup>



            <Button

                android:id="@+id/savePreferencesButton"

                android:layout_width="match_parent"

                android:layout_height="56dp"

                android:layout_marginTop="24dp"

                android:backgroundTint="@color/brand_pink"

                android:text="Save Preferences"

                android:textColor="@color/white"

                android:textSize="18sp"

                app:cornerRadius="12dp" />



            <TextView

                android:id="@+id/skipForNowTextView"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"

                android:layout_marginTop="16dp"

                android:text="Skip for Now"

                android:textColor="@color/text_secondary"

                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>



    <!-- THIS IS THE ONLY UPDATED PART -->

    <FrameLayout

        android:id="@+id/loadingLocationOverlay"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:background="@color/card_background"

        android:clickable="true"

        android:focusable="true"

        android:visibility="gone"

        tools:visibility="visible">



        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:padding="16dp"

            android:layout_marginTop="?attr/actionBarSize">



            <TextView

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Fetching your location..."

                android:textColor="@color/text_primary"

                android:textSize="20sp"

                android:textStyle="bold" />



            <ProgressBar

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"

                style="?android:attr/progressBarStyleHorizontal"

                android:indeterminate="true" />

        </LinearLayout>

    </FrameLayout>

    <!-- END OF UPDATED PART -->

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6B6B">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="87dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Secure icon"
            android:src="@drawable/secure_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Permissions Needed"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="16dp" />

        <!-- LOCATION -->
        <LinearLayout
            android:id="@+id/cardLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iconLocation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_location"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Access"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow access to your device to find nearby food stalls"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- MESSAGE -->
        <LinearLayout
            android:id="@+id/cardMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iconMessage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_message"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message Access"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable message access to receive updates and alerts"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- DATE -->
        <LinearLayout
            android:id="@+id/cardDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iconDate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_date"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Access"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable date access to sync with your daily preferences and menu availability"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- TIME -->
        <LinearLayout
            android:id="@+id/cardTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/iconTime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_time"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Access"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allow access to your system time for accurate scheduling and menu timing"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switchTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAllow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Continue"
            android:textColor="#FF6B6B"
            android:background="@drawable/bg_white_button"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/textSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip for now"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>

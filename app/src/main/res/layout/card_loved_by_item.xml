<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:layout_marginEnd="12dp">

    <ImageView
        android:id="@+id/lovedItemImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sd1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lovedItemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Margherita Pizza"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lovedItemPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹150"
            android:textColor="@color/colorOnSurfaceSecondary" />
    </LinearLayout>

    <Button
        android:id="@+id/lovedItemAddButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:backgroundTint="@color/brand_pink"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>
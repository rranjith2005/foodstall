<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".UreceipttActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:background="@drawable/green_circle_background">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_tick"
                    app:tint="#FFFFFF" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Payment Successful"
                android:textColor="#222222"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Thank you for your order! Your food will be\nprepared soon."
                android:textAlignment="center"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">

                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Order ID" />
                    <TextView style="@style/ReceiptValueStyle" android:text="ORD928371X" />
                </LinearLayout>

                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Order Time" />
                    <TextView style="@style/ReceiptValueStyle" android:text="1:02 PM" />
                </LinearLayout>

                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Stall" />
                    <TextView style="@style/ReceiptValueStyle" android:text="Pizza Hub" />
                </LinearLayout>

                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Pre-parcel by" />
                    <TextView style="@style/ReceiptValueStyle" android:text="2:30 PM" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <View style="@style/DividerStyle" android:layout_marginBottom="8dp" />

                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Margherita Pizza\n× 1" />
                    <TextView style="@style/ReceiptValueStyle" android:text="$12.99" />
                </LinearLayout>
                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Garlic Bread\n× 2" />
                    <TextView style="@style/ReceiptValueStyle" android:text="$4.99" />
                </LinearLayout>
                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Coca Cola\n× 1" />
                    <TextView style="@style/ReceiptValueStyle" android:text="$2.99" />
                </LinearLayout>

                <View style="@style/DividerStyle" android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Subtotal" />
                    <TextView style="@style/ReceiptValueStyle" android:text="$25.96" />
                </LinearLayout>
                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Delivery Fee" />
                    <TextView style="@style/ReceiptValueStyle" android:text="$2.99" />
                </LinearLayout>
                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Tax" />
                    <TextView style="@style/ReceiptValueStyle" android:text="$2.89" />
                </LinearLayout>
                <LinearLayout style="@style/ReceiptRowStyle">
                    <TextView style="@style/ReceiptLabelStyle" android:text="Total Paid" android:textStyle="bold" />
                    <TextView style="@style/ReceiptValueStyle" android:text="$31.84" android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/viewReceiptButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:backgroundTint="@color/blue"
                android:drawableStart="@drawable/ic_orders"
                app:drawableTint="@color/white"
                android:drawablePadding="8dp"
                android:text="View Receipt in Orders"
                android:textColor="#FFFFFF"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/backToHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_home"
                android:drawablePadding="8dp"
                android:text="Back to Home"
                android:textColor="@color/blue"
                android:textAllCaps="false"
                app:drawableTint="@color/blue"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_marginTop="12dp"
    android:padding="8dp"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/stall_sample"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:text="Pizza Hub"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <TextView
            android:text="⭐ 4.8"
            android:textColor="#888888"
            android:textSize="12sp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <TextView
            android:text="Italian"
            android:textColor="#888888"
            android:textSize="12sp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <TextView
            android:text="⏰ 10:00 AM - 10:00 PM"
            android:textColor="#888888"
            android:textSize="12sp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    </LinearLayout>

    <TextView
        android:text="● Open"
        android:textColor="#2ECC71"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/stall_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/stall_sample1" />

    <TextView
        android:id="@+id/stall_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stall Name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/stall_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ 4.5" />

    <TextView
        android:id="@+id/stall_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="South Indian / Snacks" />

    <TextView
        android:id="@+id/stall_timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⏰ 9 AM - 5 PM" />

    <TextView
        android:id="@+id/stall_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● Open"
        android:textStyle="bold"
        android:textColor="@color/green" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/stallNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pizza Hub"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/orderIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORD104783"
                android:textSize="12sp"
                android:textColor="#666666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_time"
                android:layout_marginEnd="4dp"
                app:tint="#666666" />

            <TextView
                android:id="@+id/orderTimeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11:45 AM, 10 June 2024"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/pickupTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick up by 2:30 PM"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderedItemsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chicken Roll × 1\nPuffs × 2"
            android:textSize="14sp"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/orderStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/status_delivered_background"
                android:text="Delivered"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/totalAmountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹120.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_receipt"
                android:layout_marginEnd="4dp"
                app:tint="#FF6B6B" />

            <TextView
                android:id="@+id/viewReceiptTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Receipt"
                android:textSize="14sp"
                android:textColor="#FF6B6B" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
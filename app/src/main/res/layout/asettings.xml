<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6B6B"
    tools:context=".AsettingsActivity">

    <!-- Top Background -->
    <View
        android:id="@+id/topBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF6B6B"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back" />

    <!-- User Profile Section -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/nithi"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hi, John!"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Options Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Analysis -->
                <LinearLayout
                    android:id="@+id/analysisLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_chart"
                        app:tint="#FF6B6B" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Analysis" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <!-- Edit Stall -->
                <LinearLayout
                    android:id="@+id/editStallLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_edit"
                        app:tint="#FF6B6B" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Edit Stall" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <!-- Help & Support -->
                <LinearLayout
                    android:id="@+id/helpSupportLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_headphone"
                        app:tint="#FF6B6B" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Help &amp; Support" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <!-- Privacy Policy -->
                <LinearLayout
                    android:id="@+id/privacyLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_shield"
                        app:tint="#FF6B6B" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Privacy Policy" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />

                <!-- Log Out Button -->
                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Log out"
                    android:textAllCaps="false"
                    android:textColor="#FF6B6B"
                    android:backgroundTint="@color/light_peach"
                    app:cornerRadius="12dp"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="8dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

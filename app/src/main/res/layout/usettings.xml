<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF6B6B"
    tools:context=".UsettingsActivity">

    <View
        android:id="@+id/topBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF6B6B"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/sai"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hi, User!"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/notificationsLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_bell"
                        app:tint="#666666" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Notifications" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locationLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_location"
                        app:tint="#666666" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Location Preferences" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/changePasswordLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_lock"
                        app:tint="#666666" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Change Password" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/privacyLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_shield"
                        app:tint="#666666" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Privacy Policy" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/helpLayout"
                    style="@style/SettingsItemStyle">
                    <ImageView
                        style="@style/SettingsIconStyle"
                        android:src="@drawable/ic_headphone"
                        app:tint="#666666" />
                    <TextView
                        style="@style/SettingsTextStyle"
                        android:text="Help and Support" />
                    <ImageView
                        style="@style/SettingsArrowStyle"
                        app:tint="#999999" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Log Out"
                    android:textAllCaps="false"
                    android:textColor="#FF6B6B"
                    android:backgroundTint="@color/light_peach"
                    app:cornerRadius="12dp"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawableTint="#FF6B6B"
                    android:drawablePadding="8dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
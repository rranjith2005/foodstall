<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6F6"
    tools:context=".Aprivacy_policyActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF6B6B"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Privacy Policy"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Privacy Policy"
                android:layout_marginBottom="8dp" />

            <TextView
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As an administrator of the Stall Spot application, your access to certain user and stall data is necessary for the proper functioning and management of the platform. This policy outlines how this data is handled."
                android:layout_marginBottom="16dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data You Can Access"
                android:layout_marginBottom="8dp" />

            <TextView
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Stall owner information (name, ID, contact)"
                android:layout_marginBottom="4dp" />
            <TextView
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Stall details (location, menu, images)"
                android:layout_marginBottom="4dp" />
            <TextView
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- User reviews and ratings"
                android:layout_marginBottom="16dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Responsibilities"
                android:layout_marginBottom="8dp" />

            <TextView
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- You must handle all data with confidentiality."
                android:layout_marginBottom="4dp" />
            <TextView
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Data should only be used for its intended purpose."
                android:layout_marginBottom="4dp" />
            <TextView
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Unauthorized access or sharing is strictly prohibited."
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/privacyPolicyCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have read and agree to the Admin Privacy Policy"
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/acceptContinueButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="#FF6B6B"
                android:text="Accept &amp; Continue"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/goBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textColor="#FF6B6B"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="9dp"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_search"
    android:layout_marginEnd="12dp">

    <ImageView
        android:id="@+id/iv_special"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sd1" />

    <TextView
        android:id="@+id/tv_special_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Margherita Pizza"
        android:textSize="15sp"
        android:textColor="#222"
        android:textStyle="bold"
        android:layout_marginTop="7dp"/>

    <TextView
        android:id="@+id/tv_special_vendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza Hub"
        android:textSize="13sp"
        android:textColor="#888" />

    <TextView
        android:id="@+id/tv_special_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12.99"
        android:textSize="14sp"
        android:textColor="#FF6B7B"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>
</LinearLayout>
